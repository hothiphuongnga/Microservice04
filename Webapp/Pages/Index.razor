@page "/"

<PageTitle>Index</PageTitle>

@* render ra ds sản  phẩm,

    sp có button thêm giỏ hàng 


    ds giỏ hàng (lưu local) -> page giỏ hàng  -> đặt đơn -> gọi api orders

*@

@using Webapp.Models
@using Webapp.Services
@inject IProductService ProductService
@inject ICartService CartService


<div class="container mt-4">
   <div class="d-flex justify-content-between align-items-center mb-4">
     <h2 class="mb-4">
        <i class="bi bi-box-seam"></i> Danh sách sản phẩm
    </h2>
    <a href="/cart">Giỏ hàng (@CountCart)</a>
   </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">Đang tải sản phẩm...</p>
        </div>
    }
    else if (products == null || !products.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Chưa có sản phẩm
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in products)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                    <div class="card product-card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">
                                @product.Name
                            </h5>

                            <div class="mb-2">
                                <span class="price">
                                    @product.Price.ToString("N0") đ
                                </span>
                            </div>

                            <div class="mt-auto">
                                <span class="badge @(product.Stock > 0 ? "bg-success" : "bg-danger")">
                                    @(product.Stock > 0
                                        ? $"Còn {product.Stock} sản phẩm"
                                        : "Hết hàng")
                                </span>
                                <button @onclick="() => AddToCart(product)" class="btn btn-primary"  disabled="@(product.Stock == 0)">Thêm vào giỏ hàng</button>
                            </div>
                        </div>

                        <div class="card-footer text-muted text-center small">
                            <i class="bi bi-calendar"></i>
                            @product.CreatedAt.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


@code {
    private List<ProductDto> products = new();
    private bool isLoading = true;
    public  int CountCart = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        await LoadCartAsync();

    }

    public async Task LoadCartAsync(){
        CountCart = await CartService.CountCartItemAsync();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        try
        {
            var response = await ProductService.GetAllAsync();
            if (response.Success && response.Content != null)
            {
                products = response.Content;
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    // Thêm sản phẩm vào giỏ hàng
    public async Task AddToCart(ProductDto product)
    {
        await CartService.AddCartAsync(product, 1);
        await LoadCartAsync();
        StateHasChanged();
    }
}
