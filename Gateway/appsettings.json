{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/product-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/product-service"
          }
        ]
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/order-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/order-service"
          }
        ]
      },
      "userRoute": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user-service"
          }
        ]
      },
      "paymentRoute": {
        "ClusterId": "paymentCluster",
        "Match": {
          "Path": "/payment-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/payment-service"
          }
        ]
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productService": {
            "Address": "https://localhost:7151"
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderService": {
            "Address": "https://localhost:7227"
          }
        }
      },
      "userCluster": {
        "Destinations": {
          "userService": {
            "Address": "https://localhost:7026"
          }
        }
      },
      "paymentCluster": {
        "Destinations": {
          "paymentService": {
            "Address": "https://localhost:7047"
          }
        }
      }
    }
  }
}